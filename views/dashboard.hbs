<h3><img src="https://i.imgur.com/o74pgZm.png" height="150px" alt="SellIt!"></h3>
<h5>Dashboard</h5>
<h3>Hey {{name}}</h3>
<p>Here's Your Items!</p>
{{#if items}}
  <table class="striped">
      <thead>
          <tr>
              <th>Title</th>
              {{!-- <th>Photo</th> --}}
              <th>Description</th>
              <th>Price</th>
          </tr>
      </thead>
  <tbody>
      {{#each items}}
      <tr>
          <td><a href="/items/{{_id}}"></a>{{title}}</td>
          {{!-- <td>{{photo}}</td> --}}
          <td>{{description}}</td>
          <td>{{price}}</td>
          <td>{{createAt}}</td>
          <td>
              <a href="/items/edit/{{_id}}" class="btn btn-float">
              <i class="fas fa-edit"></i>
              </a>
              <form action="/items/{{_id}}" method="POST" id="delete-form">
              <input type="hidden" name="_method" value="DELETE">
              <button type="submit" class="btn-red">
                  <i class="fas fa-trash"></i>
              </button>
              </form>
         
          </td>
      </tr>
      {{/each}}
  </tbody>
  </table>
  {{else}}
  <p>No Items Listed</p>
  {{/if}}  
 
